{
  "name": "ecomerce_sanny",
  "version": "1.0.0",
  "description": "E-commerce platform with React frontend, admin panel, and Node.js backend",
  "main": "backend/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run admin\"",
    "server": "cd backend && npm run dev",
    "client": "cd Client && npm start",
    "admin": "cd admin-app && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../Client && npm install && cd ../admin-app && npm install",
    "setup-and-run": "npm run install-all && npm run dev",
    "build": "cd Client && npm run build && cd ../admin-app && npm run build",
    "start": "npm run dev",
    "test": "node tests/test-runner.js",
    "test:unit": "node tests/test-runner.js --unit-only",
    "test:api": "jest tests/api.test.js",
    "test:frontend": "jest tests/frontend.test.js",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "node tests/performance.test.js",
    "test:security": "node security-quick.js",
    "test:all": "node test-all.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "node tests/test-runner.js --no-e2e",
    "quick-test": "node quick-test.js",
    "test:simple": "node simple-test.js",
    "test:perf": "node performance-test.js",
    "setup:test-env": "node setup-tests.js",
    "lint:tests": "eslint tests/**/*.js",
    "clean:reports": "rimraf test-reports/*"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "admin-panel"
  ],
  "author": "Mustapha Zoghlami",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "concurrently": "^8.2.0",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "form-data": "^4.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  }
}
